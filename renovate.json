{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "addLabels": [
        "python"
      ]
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchDepTypes": [
        "dev"
      ],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}